{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container p-4">
    <div class="row gx-4 justify-content-center">
        <div class="col-lg-5">
            <h2>Se connecter</h2>

            <form method="post" action="{{ path('app_login') }}">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connectées comme {{ app.user.userIdentifier }}
                        <br>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}
                <label for="email">Email</label>
                <input type="email" value="{{ last_email }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Se souvenir de moi</label>
                </div>

                <button class="btn btn-lg btn-primary" type="submit">
                   Connexion
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
