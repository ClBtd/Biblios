{% extends 'base.html.twig' %}

{% block title %}Nos éditeurs{% endblock %}

{% block body %}
<h1>Tous nos éditeurs</h1>

<ul class="list-group list-group-flush">
    {% for editor in editors %}
    <div class="card mb-1 mx-3">
        <div class="card-body">
            <div class="card-title d-flex justify-content-between">
                <a href="{{ path('admin_editor_show', {id: editor.id}) }}" class="stretched-link link-dark">
                    <h4 class="mb-1">{{ editor.name }}</h4>
                </a>
                <small class="text-muted">Identifiant : {{ editor.id }}</small>
            </div>
        </div>
    </div>
    {% endfor %}
</ul>
{% endblock %}
